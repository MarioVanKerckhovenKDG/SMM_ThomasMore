<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android_smm.LoginActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linearLayout"
                android:gravity="center_horizontal"

                android:background="@color/colorPrimary">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circle"
                    android:padding="10dp"
                    android:src="@drawable/img_authentication"
                    android:tint="@color/white"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="22dp"
                    android:layout_marginTop="10dp"
                    android:text="LOGIN"

                    android:textSize="20sp" />

            </LinearLayout>
            
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="20dp"
                android:layout_below="@id/linearLayout"
                android:src="@drawable/square"
                android:layout_marginTop="-10dp"
                android:layout_centerHorizontal="true"
                android:rotation="45"
                android:layout_height="20dp"
                />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView_userToon"
                    android:layout_width="40dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/img_user"
                    android:padding="8dp"
                    android:tint="@color/white"
                    android:layout_height="40dp" />

                <EditText
                    android:id="@+id/editText_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/imageView_userToon"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/imageView_userToon"
                    android:background="@color/editTextBG"
                    android:hint="Username"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:textSize="15sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:layout_below="@id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView_passwordToon"
                    android:layout_width="40dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/img_authentication"
                    android:padding="8dp"
                    android:tint="@color/white"
                    android:layout_height="40dp" />

                <EditText
                    android:id="@+id/editText_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/imageView_passwordToon"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/imageView_passwordToon"
                    android:background="@color/editTextBG"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayout2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:layout_centerVertical="true"
                android:text="Remember Me"/>

                <Button

                    android:layout_width="wrap_content"
                    android:text="Forgot Password"
                    android:background="@color/transparent"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/textColor"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <Button
                android:id="@+id/button_signin"
                android:layout_below="@id/relativeLayout3"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:text="SIGN IN"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView_signin"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layerType="software"
                android:src="@drawable/clash"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"

                android:layout_below="@id/button_signin"
                />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:textSize="12sp"
                android:layout_below="@id/imageView_signin"
                android:text="Or Login with" android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                />


            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_below="@id/textView1"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
                <!--<ImageView
                    android:id="@+id/facebooklogo"
                    android:background="@color/facebookBlue"
                    android:layout_width="50dp"
                    android:src="@drawable/img_facebook"
                    android:padding="10dp"
                    android:layout_height="50dp" />-->

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/facebooklogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                     />

                <!--<ImageView
                    android:background="@color/twitterBlue"
                    android:layout_width="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/img_twitter"
                    android:padding="10dp"
                    android:layout_height="50dp" />

                <ImageView
                    android:background="@color/googleRed"
                    android:layout_width="50dp"
                    android:src="@drawable/img_googleplus"
                    android:padding="10dp"
                    android:layout_height="50dp" />-->
            </LinearLayout>


            <TextView
                android:layout_below="@id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:text="Don't have an account? Sign up at our website!"/>
        </RelativeLayout>



    </android.support.v7.widget.CardView>

</RelativeLayout>
